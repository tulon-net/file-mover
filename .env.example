# Database Configuration
MARIADB_ROOT_PASSWORD=rootpassword
MARIADB_DATABASE=filemover
MARIADB_USER=filemover
MARIADB_PASSWORD=filemoverpassword

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=adminpassword

# Secrets Provider Configuration
# Options: AzureKeyVault, KeyCloak, HashiCorp
SECRETS_PROVIDER=AzureKeyVault

# Azure Key Vault Configuration (if using AzureKeyVault)
AZURE_KEY_VAULT_URI=https://your-vault.vault.azure.net/
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# HashiCorp Vault Configuration (if using HashiCorp)
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your_vault_token

# KeyCloak Configuration (if using KeyCloak)
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=filemover
KEYCLOAK_CLIENT_ID=filemover-client
KEYCLOAK_CLIENT_SECRET=your_client_secret

# Grafana Configuration
GRAFANA_PASSWORD=admin

# OpenTelemetry Configuration
OTEL_ENDPOINT=http://otel-collector:4317

# Elastic APM Configuration (optional)
# ELASTIC_APM_ENDPOINT=https://your-elastic-apm.cloud.elastic.co
# ELASTIC_APM_TOKEN=your_elastic_token

# Environment
ENVIRONMENT=Development

# Docker Registry (for Swarm/K8s deployments)
DOCKER_REGISTRY=your-registry.azurecr.io
VERSION=latest
